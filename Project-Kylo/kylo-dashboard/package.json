{
  "name": "kylo-dashboard",
  "version": "0.1.0",
  "description": "Kylo Hub Supervisor Dashboard - Electron Desktop App",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "electron-builder"
  },
  "keywords": ["kylo", "dashboard", "electron"],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "chokidar": "^3.5.3",
    "chart.js": "^4.4.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.kylo.dashboard",
    "productName": "Kylo Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}

